{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.email) }}
        </div>
        <div class="form-group">
            {{ form_row(form.username) }}
        </div>
        <div class="form-group">
            {{ form_row(form.plainpassword) }}
        </div>
        <button type="submit" class="btn btn-primary">Inscription</button>
        {{ form_end(form) }}
    </div>
{% endblock %}