<form method="post" action="{{ path('subcategory_delete', {'slug': subcategory.slug, 'category': subcategory.category}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ subcategory.id) }}">
    <button class="btn">Delete</button>
</form>
