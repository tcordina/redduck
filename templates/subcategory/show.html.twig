{% extends 'base.html.twig' %}

{% block title %}{{ subcategory.name }} - posts{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ subcategory.name }}</h1>

        {% for post in subcategory.posts %}
            <div class="post-container" onclick="location.href='{{ path('post_show', {'id': post.id}) }}';">
                <div class="row list-row">
                    <div class="col-1 buttons-vote" align="right">
                        <button class="upvote-btn {% if post.upvotes.contains(app.user) %}text-info{% endif %}"
                                onclick="upVote(this, event, {{ post.id }})">
                            <i class="fas fa-sort-up"></i>
                        </button>
                        <span class="karma-count">{{ post.upvotes|length - post.downvotes|length }}</span>
                        <button class="downvote-btn {% if post.downvotes.contains(app.user) %}text-warning{% endif %}"
                                onclick="downVote(this, event, {{ post.id }})">
                            <i class="fas fa-sort-down"></i>
                        </button>
                    </div>
                    <div class="col-1">
                        <img src="{{ asset('uploads/images/posts/' ~ post.image) }}" alt="" height="55">
                    </div>
                    <div class="col-10">
                        <span class="post-title">{{ post.title }}</span>
                        <span class="post-author">post√© par {{ post.author.username }}</span><br/>
                        <span><i class="fas fa-comment-alt" style=""></i>&nbsp;{{ post.messages|length }}</span>
                    </div>
                </div>
            </div>
        {% endfor %}
        <a href="{{ path('subcategory_index') }}">back to list</a>

        <a href="{{ path('subcategory_edit', {'slug': subcategory.slug}) }}">edit</a>

        {{ include('subcategory/_delete_form.html.twig') }}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        function upVote(btn, event, postId) {
            event.stopImmediatePropagation();
            postId = postId.toString();
            let url = '{{ path('post_upvote', {'id': 'postId'}) }}'
            url = url.replace('postId', postId);
            $.ajax({
                method: 'POST',
                url: url,
                type: 'text',
                success: function (res) {
                    if (res == 'added') {
                        $(btn).addClass('text-info')
                        $(btn).next().removeClass('text-warning');
                    } else if (res == 'removed') {
                        $(btn).removeClass('text-info')
                    } else if (res == 'login') {
                        location.href = '{{ path('security_login') }}'
                    }
                }
            })
        }

        function downVote(btn, event, postId) {
            event.stopImmediatePropagation();
            postId = postId.toString();
            let url = '{{ path('post_downvote', {'id': 'postId'}) }}'
            url = url.replace('postId', postId);
            $.ajax({
                method: 'POST',
                url: url,
                type: 'text',
                success: function (res) {
                    if (res == 'added') {
                        $(btn).addClass('text-warning')
                        $(btn).prev().removeClass('text-info');
                    } else if (res == 'removed') {
                        $(btn).removeClass('text-warning')
                    } else if (res == 'login') {
                        location.href = '{{ path('security_login') }}'
                    }
                }
            })
        }
    </script>
{% endblock %}
